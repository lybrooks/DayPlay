<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guowang.mto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.MtoAplication"
        android:allowBackup="true"
        android:icon="@mipmap/iconmusicm"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.PlaylistActicity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.BaseActivity" />

        <service
            android:name=".servive.MusicService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="com.wm.remusic.service.MediaService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".service.MediaPlaySercive"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>