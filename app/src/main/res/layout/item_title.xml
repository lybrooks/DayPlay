<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#e61010">

    <ImageView
        android:id="@+id/iv_actionbar_menu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/actionbar_menu" />


    <ImageView
        android:id="@+id/id_actionbar_disco"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_disco"
        android:layout_toLeftOf="@+id/iv_actionbar_music"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_music"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_actionbar_music"
        />



    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_friends"
        android:id="@+id/iv_action_friends"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_actionbar_music"
        android:layout_toEndOf="@+id/iv_actionbar_music" />


    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/iv_action_friends"
        android:background="@drawable/actionbar_search" />

</RelativeLayout>