<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/color_top"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_dialog_red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/selector_pick_item"
            android:backgroundTint="#f90617" />


        <ImageView
            android:id="@+id/iv_dialog_purple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/selector_pick_item"
            android:backgroundTint="#9b0cd4" />

        <ImageView
            android:id="@+id/iv_dialog_bule"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/selector_pick_item"
            android:backgroundTint="#0742f1" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_dialog_green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/selector_pick_item"
            android:backgroundTint="#0fda34" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/color_top"
        android:id="@+id/color_below"
        >

        <ImageView
            android:id="@+id/iv_dialog_d_green"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/selector_pick_item"
            android:backgroundTint="#329614" />

        <ImageView
            android:id="@+id/iv_dialog_yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/selector_pick_item"
            android:backgroundTint="#eaed04"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/iv_dialog_d_yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/selector_pick_item"
            android:backgroundTint="#f1a707" />

        <ImageView
            android:id="@+id/iv_dialog_pick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/selector_pick_item"
            android:backgroundTint="#ef02a0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/color_below"
        >

        <TextView
            android:id="@+id/tv_dialog_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:text="取消"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_marginLeft="20dp"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>