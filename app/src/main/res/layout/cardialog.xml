<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_dialog_red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/ic_check_white_18dp"
            app:backgroundTint="#e91e1e" />

        <ImageView
            android:id="@+id/iv_dialog_purple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/ic_check_white_18dp"
            app:backgroundTint="#9b0cd4" />

        <ImageView
            android:id="@+id/iv_dialog_bule"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/ic_check_white_18dp"
            app:backgroundTint="#0742f1" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_dialog_green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/ic_check_white_18dp"
            app:backgroundTint="#0fda34" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_dialog_d_green"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/ic_check_white_18dp"
            app:backgroundTint="#329614" />

        <ImageView
            android:id="@+id/iv_dialog_yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/ic_check_white_18dp"
            app:backgroundTint="#eaed04"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/iv_dialog_d_yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/ic_check_white_18dp"
            app:backgroundTint="#f1a707" />

        <ImageView
            android:id="@+id/iv_dialog_pick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_card_bigdp"
            android:src="@drawable/ic_check_white_18dp"
            app:backgroundTint="#ef02a0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/tv_dialog_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:text="取消"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="OK"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>